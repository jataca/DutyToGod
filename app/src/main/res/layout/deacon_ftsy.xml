<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/blue"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:text="Back"
        android:id="@+id/back"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="deaconMain"/>


    <TextView
        android:textSize="36dp"
        android:text="For the Strength of Youth:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:textStyle="bold"
        android:layout_below="@+id/back"
        android:layout_centerHorizontal="true" />



    <TextView
        android:background="@color/white"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/deaconftsy"
        android:id="@+id/instruction"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Learn"
        android:id="@+id/learn"
        android:layout_above="@+id/create"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create"
        android:id="@+id/create"
        android:layout_above="@+id/report"
        android:layout_alignLeft="@+id/learn"
        android:layout_alignStart="@+id/learn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="report"
        android:id="@+id/report"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/create"
        android:layout_alignStart="@+id/create" />

</RelativeLayout>
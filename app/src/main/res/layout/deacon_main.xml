    <TextView android:text="TOPIC:" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/topic"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/office"
        android:layout_alignEnd="@+id/office"
        android:textSize="24dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spiritual Strength"
        android:id="@+id/ss"
        android:layout_below="@+id/topic"
        android:layout_centerHorizontal="true"
        android:onClick="deaconSS"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="More topics coming soon!"
        android:textStyle="italic"
        android:textSize="24dp"
        android:layout_below="@+id/ss"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />


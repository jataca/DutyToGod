<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/blue"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:text="Back"
        android:id="@+id/back"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="deaconMain"/>


    <TextView
        android:textSize="36dp"
        android:text="Spiritual Strength:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:textStyle="bold"
        android:paddingLeft="10dp"
        android:layout_below="@+id/back"
        android:layout_centerHorizontal="true" />

    <TextView
        android:background="@color/white"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The Lord has admonished priesthood holders, “Be ye clean” (D\u0026C 38:42). In this section you will learn how personal worthiness is tied to priesthood power (see D\u0026C 121:34–46). You will also make plans to begin or strengthen a habit of regular prayer and scripture study, which includes studying the words of the living prophets.

This section is organized into the following areas:"
        android:id="@+id/instruction"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pray and Study the Scriptures"
        android:id="@+id/pss"
        android:onClick="deaconSSPrayLearn"
        android:layout_above="@+id/lw"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Live Worthily"
        android:id="@+id/lw"
        android:onClick="deaconSSLiveLearn"
        android:layout_above="@+id/ud"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Understand Doctrine"
        android:id="@+id/ud"
        android:onClick="deaconSSUnderstandLearn"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>

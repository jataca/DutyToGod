<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/blue"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:text="Back"
        android:id="@+id/back"
        android:onClick="deaconMain"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:textSize="36dp"
        android:text="Priesthood Duties:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:textStyle="bold"
        android:paddingLeft="10dp"

        android:layout_below="@+id/back"
        android:layout_centerHorizontal="true" />


    <TextView
        android:background="@color/white"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The Lord has said that every priesthood holder should “learn his duty” and “act … in all diligence” (D\u0026C 107:99). This section will help you learn and fulfill your duties as a deacon, which are outlined in Doctrine and Covenants 20:57, 59; 84:111. Your duties can be organized into three groups:"
        android:id="@+id/instruction"

        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Administer Priesthood Ordinances"
        android:id="@+id/apo"
        android:layout_above="@+id/so"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Serve Others"
        android:id="@+id/so"
        android:layout_above="@+id/iacc"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Invite All to Come unto Christ"
        android:id="@+id/iacc"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_height="500dp"
    android:layout_width="fill_parent"
    android:layout_below="@id/learn"
    android:scrollbars="vertical"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    android:verticalScrollbarPosition="right"

    >
    <RelativeLayout
     android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/blue"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:text="Back"
        android:id="@+id/back"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="deaconSS"/>

    <TextView
        android:textSize="36dp"
        android:text="Understand Doctrine:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:textStyle="bold"
        android:paddingLeft="10dp"
        android:layout_below="@+id/back"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:text="Learn"
        android:id="@+id/learn"
        android:onClick="deaconSSUnderstandLearn"
        android:background="@color/selected"
        android:layout_below="@+id/title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <Button
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:text="Act"
        android:id="@+id/act"
        android:onClick="deaconSSUnderstandAct"
        android:layout_alignTop="@+id/learn"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:text="Share"
        android:id="@+id/share"
        android:onClick="deaconSSUnderstandShare"
        android:layout_alignTop="@+id/act"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <TextView
        android:background="@color/white"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/deaconSSUnderstandLearn"
        android:id="@+id/instruction"
        android:layout_below="@+id/learn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:id="@+id/buffer"
            android:layout_below="@+id/instruction" />

    <EditText
        android:background="@color/white"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minLines="2"
        android:lines="5"
        android:maxLines="10"
        android:scrollbars="vertical"
        android:id="@+id/etext"
        android:layout_below="@+id/buffer"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
</ScrollView>
